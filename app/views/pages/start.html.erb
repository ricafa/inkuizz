<h1>Good Luck!</h1>

<h3> <%="#{@question.question_number}. #{@question.ask_a_question}"  %> </h3>

<%= form_tag '/start', method: "get" do %>
  <%= hidden_field_tag(:uid, @user.id)%>
  <% @answers.each do |a| %>
    <% unless a.options.nil?  %>
      <%= radio_button_tag('an', a.answer_number) %>
      <%= label_tag('an', a.options) %><br />
    <% end %>
  <% end %>

  <%= submit_tag "Next".html_safe, class: 'btn btn-primary', data: { disable_with: "Please wait..." }  %>
<% end %>
